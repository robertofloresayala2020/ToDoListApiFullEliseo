@model List<Tarea>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">APP To Do List</h1>
    @*<p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>*@
</div>


<div class="card">
    <div class="card-header">
        Lista de Tareas
    </div>
    <div class="card-body">

        <a asp-action="Tarea" asp-controller="Home" asp-route-id="0" class="btn btn-success btn-sm">Nueva Tarea</a>
        @*<a asp-action="test" asp-controller="Home" class="btn btn-success">test</a>*@
        <hr />
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Descripcion de la Tarea</th>
                    <th>FechaLimite</th>
                    <th>Estatus</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Descripcion</td>
                        <td>@item.FechaLimite</td>
                        <td>@item.Estatus</td>
                        <td>
                            <a asp-action="Tarea" asp-controller="Home" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Editar</a>
                            <a asp-action="Eliminar" asp-controller="Home" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Eliminar</a>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>